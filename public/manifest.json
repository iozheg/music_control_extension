{
  "manifest_version": 2,
  "name": "YaMusic control panel",
  "version": "1.0",
  "icons": {
    "48": "assets/img/icon.svg"
  },

  "browser_action": {
    "default_icon": "assets/img/icon.svg",
    "default_title": "Открыть управление Я.Музыка",
    "default_popup": "app.html"
  },

  "permissions": [
    "*://music.yandex.ru/*",
    "*://music.yandex.by/*",
    "*://music.yandex.ua/*",
    "*://music.yandex.kz/*",
    "*://music.yandex.com/*",
    "tabs",
    "storage"
  ]
}
